<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:gravity="center"
    tools:context=".activity.CenterActivity">


    <Button
        android:id="@+id/MainActivity"
        android:layout_width="wrap_content"

        android:textStyle="bold"
        android:text="Alias Creation"
        android:backgroundTint="@color/blue500"
        android:layout_height="wrap_content">
    </Button>


    <Button
        android:id="@+id/ReferAndEarn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue500"
        android:text="Refer and Earn" />


    <Button
        android:id="@+id/AlternateNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue500"
        android:text="Alternate Names" />


    <Button
        android:id="@+id/FeaturedAccounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue500"
        android:text="Featured Accounts" />

</LinearLayout>