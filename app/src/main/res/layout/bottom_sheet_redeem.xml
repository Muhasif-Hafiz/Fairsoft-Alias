<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"

    android:background="@drawable/shape_curved_bottom_sheet"
    android:paddingTop="32dp"
    android:gravity="center_horizontal"
    app:ignore="NamespaceTypo">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieRedeem"
        android:layout_width="200dp"
        app1:lottie_autoPlay="true"
        app1:lottie_loop="true"
        app1:lottie_fileName="redeem_now.json"
        android:layout_height="200dp"
       />

    <Button
        android:id="@+id/btnRedeemNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Redeem Now"
        app:lottie_loop="true"
        android:fontFamily="@font/onest_bold"
        android:textColor="@color/white"
        app:lottie_autoPlay="true"
        android:backgroundTint="@color/ReferPrimary"
        android:layout_marginTop="16dp" />
</LinearLayout>
