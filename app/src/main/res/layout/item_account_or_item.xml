<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C2C2C"
                    android:fontFamily="sans-serif-medium" />

                <!-- Subtle accent line -->
                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="#1976D2"
                    android:layout_marginTop="3dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Aliases Section with improved spacing -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <!-- Alias 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="start|center_vertical"
                    android:padding="4dp"
                    android:layout_marginEnd="2dp">

                    <TextView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:text="1"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:background="@drawable/circle_number_bg"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/alias1TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alias One"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:layout_marginStart="6dp"
                        android:fontFamily="sans-serif"
                        android:ellipsize="end"
                        android:maxLines="1" />

                </LinearLayout>

                <!-- Alias 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="start|center_vertical"
                    android:padding="4dp"
                    android:layout_marginStart="2dp">

                    <TextView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:text="2"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:background="@drawable/circle_number_bg"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/alias2TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alias Two"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:layout_marginStart="6dp"
                        android:fontFamily="sans-serif"
                        android:ellipsize="end"
                        android:maxLines="1" />

                </LinearLayout>

            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Alias 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="start|center_vertical"
                    android:padding="4dp"
                    android:layout_marginEnd="2dp">

                    <TextView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:text="3"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:background="@drawable/circle_number_bg"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/alias3TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alias Three"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:layout_marginStart="6dp"
                        android:fontFamily="sans-serif"
                        android:ellipsize="end"
                        android:maxLines="1" />

                </LinearLayout>

                <!-- Alias 4 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="start|center_vertical"
                    android:padding="4dp"
                    android:layout_marginStart="2dp">

                    <TextView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:text="4"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:background="@drawable/circle_number_bg"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/alias4TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alias Four"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:layout_marginStart="6dp"
                        android:fontFamily="sans-serif"
                        android:ellipsize="end"
                        android:maxLines="1" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>